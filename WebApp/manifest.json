{
    "manifest_version": 2,

    "name": "Fare Parole",
    "short_name": "FareParole",
    "description": "A plain text description",
    "version": "1.0.0",

    "offline_enabled": true,

    "icons": {
        "16": "/assets/images/icons/16.png",
        "32": "/assets/images/icons/32.png",
        "48": "/assets/images/icons/48.png",
        "64": "/assets/images/icons/64.png",
        "128": "/assets/images/icons/128.png",
        "256": "/assets/images/icons/256.png"
    },
    "app": {
        "background": {
            "scripts": [ "background.js", "assets/js/controllers.js", "assets/js/app.js", "assets/js/common.js", "assets/js/flip.js", "assets/js/index.js", "assets/js/jquery-2.1.4.min.js" ]
        }
    },
    "permissions": [ "unlimitedStorage", "notifications", "fullscreen" ]
}